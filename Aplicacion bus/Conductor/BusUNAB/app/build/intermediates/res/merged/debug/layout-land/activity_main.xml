<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unab.semovil.busunab.MainActivity"
    android:background="@drawable/unabfondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIN INTERNET"
                        android:textColor="@color/colorBusOff"
                        android:shadowColor="@color/shadowColor"
                        android:shadowDx="4"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:id="@+id/textSinInternet"
                        android:visibility="gone"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UBICACION DESACTIVADA"
                        android:textColor="@color/colorBusOff"
                        android:shadowColor="@color/shadowColor"
                        android:shadowDx="4"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:id="@+id/textSinUbicacion"
                        android:visibility="gone"
                        android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewRun"
                android:src="@drawable/ic_ok"
                android:layout_gravity="right"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewPause"
                android:layout_gravity="right"
                android:src="@drawable/ic_pause"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewCancel"
                android:layout_gravity="right"
                android:src="@drawable/ic_cancel"
                android:visibility="invisible" />


        </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                    <info.hoang8f.widget.FButton
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:text="INICIAR"
                    android:id="@+id/btnIniciar"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                        fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"
                    fbutton:cornerRadius="20dp"
                    fbutton:buttonColor="@color/buttonAceptColor"
                        android:textSize="20dp" />

                    <info.hoang8f.widget.FButton
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:text="CANCELAR"
                    android:id="@+id/btnCancelar"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"
                    fbutton:cornerRadius="20dp"
                    fbutton:buttonColor="@color/buttonCancelColor"
                    android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp" />

                    <info.hoang8f.widget.FButton
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:text="PAUSAR"
                        android:id="@+id/btnPausar"
                        android:layout_below="@+id/textView"
                        android:layout_centerHorizontal="true"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="5dp"
                        fbutton:cornerRadius="20dp"
                        fbutton:buttonColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
